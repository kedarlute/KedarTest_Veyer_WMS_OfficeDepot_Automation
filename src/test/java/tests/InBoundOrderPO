package tests;

/**
 * @author: Kedarnath Lute
 */

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Assert;
import org.testng.annotations.*;

public class InboundTests {
    WebDriver driver;

   

    @Test(priority = 1)
    public void createPurchaseOrder() {
        driver.findElement(By.id("menu_inbound")).click();
        driver.findElement(By.id("createPO")).click();

        driver.findElement(By.id("poNumber")).sendKeys("PO12345");
        driver.findElement(By.id("vendorName")).sendKeys("ABC Supplier");
        driver.findElement(By.id("itemCode")).sendKeys("ITEM001");
        driver.findElement(By.id("quantity")).sendKeys("100");
        driver.findElement(By.id("savePO")).click();

        WebElement confirmation = driver.findElement(By.xpath("//div[contains(text(),'PO Created Successfully')]"));
        Assert.assertTrue(confirmation.isDisplayed(), "PO creation failed!");
    }

    @AfterClass
    public void tearDown() {
        driver.quit();
    }
}
